{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Entropy",
  "version": "0.1.0",
  "identifier": "com.entropy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Entropy",
        "width": 800,
        "height": 600,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/image_16x16.png",
      "icons/image_32x32.png",
      "icons/image_48x48.png",
      "icons/image_64x64.png",
      "icons/image_128x128.png",
      "icons/image_256x256.png",
      "icons/icon_rounded.icns"
    ]
  }
}
